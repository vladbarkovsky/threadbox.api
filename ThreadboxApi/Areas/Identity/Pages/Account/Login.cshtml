@page
@model LoginModel

<!-- Source https://github.com/nauvalazhar/bootstrap-5-login-page -->

<section class="h-100 mb-4">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                    <img
                        src="assets/logo.png"
                        alt="Threadbox logo image"
                        width="100"
                    />
                </div>

                <div class="card shadow-lg">
                    <div class="card-header py-3 border-0">
                        <div class="text-center">
                            Errors will be displayed here
                        </div>
                    </div>

                    <div class="card-body p-5">
                        <h3 class="mb-4">Login</h3>

                        <form method="post">
                            <div class="mb-3">
                                <label class="mb-2 text-muted" asp-for="Input.UserName"></label>
                                <input class="form-control" asp-for="Input.UserName" />
                            </div>

                            <div class="mb-3">
                                <div class="mb-2 w-100">
                                    <label class="text-muted" asp-for="Input.Password"></label>

                                    <!-- TODO: Password reset functionality -->
                                    <a class="float-end">Forgot password?</a>
                                </div>

                                <input class="form-control" asp-for="Input.Password" type="password" />
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="Input.OfflineAccess"></label>
                                </div>

                                <button class="btn btn-primary ms-auto" type="submit">Log in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}